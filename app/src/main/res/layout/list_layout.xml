<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_margin="5.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="6.5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/menudot" />


            </LinearLayout>

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView"
                android:maxLines="2"
                android:text="How to Use the Pen Tool
in Adobe illusrator"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="13.5sp" />

            <customfonts.MyTextView_Roboto_Regular
                android:id="@+id/textViewShortDesc"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_below="@id/textViewTitle"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/imageView"
                android:maxLines="4"
                android:text="The pen tool is without
doubt one of the trickest
tools to use
hhgghh
hghghgg"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="11.5sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By John Doe"
                    android:textSize="8.3sp" />

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/textHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="1.3Hour"
                    android:textSize="8.3sp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_margin="5dp" />
    </android.support.v7.widget.CardView>

</LinearLayout>